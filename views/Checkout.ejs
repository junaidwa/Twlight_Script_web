<% layout('layouts/boilerplate') %>

<!-- Checkout Section -->
<section class="min-vh-100 d-flex align-items-center position-relative overflow-hidden bg-light">
  <!-- Background Decorative Elements -->
  <div class="position-absolute top-0 start-0 end-0 bottom-0 bg-primary bg-opacity-10"></div>
  <div class="position-absolute top-0 start-0 end-0 bottom-0 overflow-hidden" style="pointer-events:none;">
    <div class="position-absolute top-25 start-25 rounded-circle" style="width:120px; height:120px; background-color:rgba(220,53,69,0.2); filter:blur(25px); animation: float 7s ease-in-out infinite;"></div>
    <div class="position-absolute bottom-25 end-25 rounded-circle" style="width:180px; height:180px; background-color:rgba(111,66,193,0.2); filter:blur(25px); animation: float 9s ease-in-out infinite 1s;"></div>
  </div>

  <div class="container position-relative py-5">
    <div class="row justify-content-center">
      <div class="col-lg-8">
        <!-- Page Title -->
        <div class="text-center mb-5">
          <h1 class="fw-bold text-primary display-5 mb-3">Checkout</h1>
          <p class="text-muted fs-5">Review your order and provide delivery details below.</p>
        </div>

        <!-- Cart Summary -->
        <div class="card border-0 shadow-lg rounded-4 mb-4">
          <div class="card-body">
            <h4 class="fw-semibold text-purple mb-4">ðŸ›’ Your Order Summary</h4>
            <% if (cart.length > 0) { %>
              <% cart.forEach(item => { %>
                <div class="d-flex align-items-center border-bottom pb-3 mb-3">
                  <img src="<%= item.image.url %>" alt="<%= item.title %>" class="rounded shadow-sm me-3" style="width: 70px; height: 70px; object-fit: cover;">
                  <div>
                    <h5 class="mb-1 text-dark"><%= item.title %></h5>
                    <p class="mb-1 text-muted small">by <%= item.author %></p>
                    <p class="fw-bold text-primary">$<%= item.price.toFixed(2) %></p>
                  </div>
                </div>
              <% }) %>
            <% } else { %>
              <p class="text-muted text-center">No items in your cart</p>
            <% } %>
          </div>
        </div>

        <!-- Delivery Details Form -->
        <div class="card border-0 shadow-lg rounded-4">
          <div class="card-body p-4">
            <h4 class="fw-semibold text-purple mb-4">ðŸ“¦ Delivery Information</h4>

            <form action="/complete-order" method="POST">
              <div class="row g-3">
                <div class="col-md-6">
                  <label for="name" class="form-label fw-semibold">Full Name</label>
                  <input type="text" id="name" name="name" class="form-control rounded-3 shadow-sm" required>
                </div>

                <div class="col-md-6">
                  <label for="address" class="form-label fw-semibold">Address</label>
                  <input type="text" id="address" name="address" class="form-control rounded-3 shadow-sm" required>
                </div>

                <div class="col-md-6">
                  <label for="city" class="form-label fw-semibold">City</label>
                  <input type="text" id="city" name="city" class="form-control rounded-3 shadow-sm" required>
                </div>

                <div class="col-md-6">
                  <label for="postalCode" class="form-label fw-semibold">Postal Code</label>
                  <input type="text" id="postalCode" name="postalCode" class="form-control rounded-3 shadow-sm" required>
                </div>

                <div class="col-md-6">
                  <label for="country" class="form-label fw-semibold">Country</label>
                  <input type="text" id="country" name="country" class="form-control rounded-3 shadow-sm" required>
                </div>
              </div>

              <hr class="my-4">

              <!-- Payment Info -->
              <h4 class="fw-semibold text-purple mb-3">ðŸ’³ Payment Method</h4>
              <p class="text-secondary mb-3">Currently only <strong>Cash on Delivery</strong> is available. Online payments coming soon!</p>
              
              <div class="mb-4">
                <select id="paymentMethod" name="paymentMethod" class="form-select rounded-3 shadow-sm" required>
                  <option value="cod">Cash on Delivery</option>
                </select>
              </div>

              <!-- Buttons -->
              <div class="d-flex justify-content-between align-items-center">
                <a href="/cart" class="btn btn-outline-secondary px-4 py-2 rounded-pill">
                  <i class="fas fa-arrow-left me-2"></i>Back to Cart
                </a>
                <button type="submit" class="btn btn-primary px-5 py-2 rounded-pill shadow">
                  Complete Order <i class="fas fa-check ms-2"></i>
                </button>
              </div>
            </form>
          </div>
        </div>

      </div>
    </div>
  </div>
</section>

<!-- Floating Animation -->
<style>
@keyframes float {
  0%, 100% { transform: translateY(0px); }
  50% { transform: translateY(-15px); }
}
.text-purple {
  color: #6f42c1;
}
</style>
