<% layout('layouts/boilerplate') %>

<%
// Safe defaults
const sel = typeof selectedCategory !== 'undefined' ? selectedCategory : 'All';
const booksList = Array.isArray(books) ? books : [];
%>

<div class="container py-5">
  <div class="row">
    <!-- Sidebar for Categories -->
    <div class="col-lg-3 mb-4">
      <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
          <h3 class="h5 mb-0">Categories</h3>
        </div>
        <div class="card-body p-0">
          <div class="list-group list-group-flush">
            <!-- "All" button -->
            <a href="/books" class="list-group-item list-group-item-action <%= sel === 'All' ? 'active' : '' %>">
              All
            </a>

            <% const categories = [
              "Fiction","Non-fiction","Science","History","Islamic",
              "Kids","Comics","Biography","Education","Technology"
            ]; %>

            <% categories.forEach(cat => { %>
              <a href="/books/category/<%= cat %>" class="list-group-item list-group-item-action <%= sel === cat ? 'active' : '' %>">
                <%= cat %>
              </a>
            <% }) %>
          </div>
        </div>
      </div>
    </div>

    <!-- Book List Section -->
    <div class="col-lg-9">
      <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-4">
        <h1 class="h3 text-primary mb-3 mb-md-0">
          <% if (sel === 'All') { %>
            All Books
          <% } else { %>
            <%= sel %> Books
          <% } %>
        </h1>

        <a href="/new" class="btn btn-primary">
          <i class="fas fa-plus me-2"></i>Add New Book
        </a>
      </div>

      <% if (booksList.length === 0) { %>
        <div class="alert alert-info text-center">
          <p class="mb-0">No books found in this category.</p>
        </div>
      <% } %>

      <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-3 g-4">
        <% booksList.forEach(book => { %>
          <div class="col">
            <div class="card h-100 shadow-sm">
              <div class="position-relative overflow-hidden" style="height: 250px;">
                <!-- Handle both object {url,..} and string image -->
                <% const imgUrl = book && book.image ? (typeof book.image === 'string' ? book.image : (book.image.url || '')) : ''; %>

                <% if (imgUrl) { %>
                  <img src="<%= imgUrl %>" class="card-img-top h-100 object-fit-cover" alt="<%= book.title || 'Book' %>" />
                <% } else { %>
                  <img src="https://via.placeholder.com/300x400?text=No+Image" class="card-img-top h-100 object-fit-cover" alt="No image available" />
                <% } %>

                <div class="position-absolute top-0 start-0 w-100 h-100 d-flex align-items-end justify-content-center pb-3"
                     style="background: linear-gradient(to top, rgba(0,0,0,0.7), transparent); opacity: 0; transition: opacity 0.3s;"
                     onmouseover="this.style.opacity=1"
                     onmouseout="this.style.opacity=0">
                  <a href="/books/<%= book._id %>/details" class="btn btn-primary btn-sm">View Details</a>
                </div>
              </div>

              <div class="card-body">
                <h3 class="card-title h5 text-truncate"><%= book.title || 'Untitled' %></h3>
                <p class="text-muted mb-2">by <%= book.author || 'Unknown' %></p>
                <p class="card-text small mb-2" style="display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden;">
                  <%= book.description || '' %>
                </p>
                <div class="d-flex justify-content-between align-items-center mb-2">
                  <span class="fw-bold text-primary">$<%= ((book.price || 0)).toFixed(2) %></span>
                  <span class="badge bg-light text-dark"><%= book.category || 'Uncategorized' %></span>
                </div>

                <div class="d-flex flex-wrap gap-2 mt-3">
                  <a href="/books/<%= book._id %>/edit" class="btn btn-warning btn-sm">
                    <i class="fas fa-edit me-1"></i>Edit
                  </a>

                  <form action="/books/<%= book._id %>?_method=DELETE" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-danger btn-sm">
                      <i class="fas fa-trash-alt me-1"></i>Delete
                    </button>
                  </form>

                  <form action="/cart" method="POST" class="d-inline">
                    <input type="hidden" name="bookId" value="<%= book._id %>">
                    <button type="submit" class="btn btn-success btn-sm">
                      <i class="fas fa-shopping-cart me-1"></i>Add to Cart
                    </button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    </div>
  </div>
</div>
