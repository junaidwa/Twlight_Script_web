<% layout('layouts/boilerplate') %>

<section class="py-5 bg-light">
    <div class="container py-4">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center mb-5">
                <h1 class="display-4 fw-bold text-primary book-float">Contact Us</h1>
                <div class="border-bottom border-primary w-25 mx-auto my-4"></div>
                <p class="lead text-muted book-slide-right">We'd love to hear from you! Reach out with any questions or feedback.</p>
            </div>
        </div>
        
        <div class="row g-5">
            <div class="col-lg-6 book-slide-left">
                <div class="bg-white shadow-sm rounded p-4 p-lg-5">
                    <h2 class="h3 text-primary mb-4">Send Us a Message</h2>
                    <form>
                        <div class="mb-3">
                            <label for="name" class="form-label">Your Name</label>
                            <input type="text" class="form-control" id="name" placeholder="John Doe">
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Email Address</label>
                            <input type="email" class="form-control" id="email" placeholder="john@example.com">
                        </div>
                        <div class="mb-3">
                            <label for="subject" class="form-label">Subject</label>
                            <input type="text" class="form-control" id="subject" placeholder="Book Inquiry">
                        </div>
                        <div class="mb-3">
                            <label for="message" class="form-label">Message</label>
                            <textarea class="form-control" id="message" rows="4" placeholder="Your message here..."></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary px-4 py-2">Send Message</button>
                    </form>
                </div>
            </div>
            
            <div class="col-lg-6 book-slide-right">
                <div class="bg-white shadow-sm rounded p-4 p-lg-5 mb-4">
                    <h2 class="h3 text-primary mb-4">Visit Our Store</h2>
                    <div class="d-flex mb-3">
                        <i class="fas fa-map-marker-alt text-primary fa-2x me-3 mt-1 book-float"></i>
                        <div>
                            <h5 class="h6 mb-1">Address</h5>
                            <p class="mb-0">123 Book Lane, Literary District<br>Readington, RD 12345</p>
                        </div>
                    </div>
                    <div class="d-flex mb-3">
                        <i class="fas fa-phone-alt text-primary fa-2x me-3 mt-1 book-float" style="animation-delay: 0.2s;"></i>
                        <div>
                            <h5 class="h6 mb-1">Phone</h5>
                            <p class="mb-0">(555) 123-4567</p>
                        </div>
                    </div>
                    <div class="d-flex">
                        <i class="fas fa-envelope text-primary fa-2x me-3 mt-1 book-float" style="animation-delay: 0.4s;"></i>
                        <div>
                            <h5 class="h6 mb-1">Email</h5>
                            <p class="mb-0">info@literaryhaven.com</p>
                        </div>
                    </div>
                </div>
                
                <div class="bg-white shadow-sm rounded p-4 p-lg-5">
                    <h2 class="h3 text-primary mb-4">Store Hours</h2>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between bg-transparent">
                            <span>Monday - Friday</span>
                            <span class="fw-bold">9:00 AM - 8:00 PM</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between bg-transparent">
                            <span>Saturday</span>
                            <span class="fw-bold">10:00 AM - 6:00 PM</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between bg-transparent">
                            <span>Sunday</span>
                            <span class="fw-bold">12:00 PM - 5:00 PM</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
