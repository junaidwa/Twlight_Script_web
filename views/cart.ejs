<% layout('layouts/boilerplate') %>

<section class="py-5">
  <div class="container">
    <h1 class="text-center mb-4 text-primary">Your Cart</h1>

    <% if (cart.length === 0) { %>
      <div class="text-center">
        <i class="fas fa-shopping-cart fa-3x text-muted mb-3"></i>
        <p class="lead text-muted">Your cart is currently empty.</p>
        <a href="/books" class="btn btn-primary mt-3">
          <i class="fas fa-book-open me-2"></i> Browse Books
        </a>
      </div>
    <% } else { %>
      <div class="table-responsive">
        <table class="table table-hover align-middle">
          <thead class="table-primary">
            <tr>
              <th>Book</th>
              <th>Author</th>
              <th>Price</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% cart.forEach((book, index) => { %>
              <tr>
                <td>
                  <div class="d-flex align-items-center">
                    <% if (book.image && book.image.url) { %>
                      <img src="<%= book.image.url %>" alt="<%= book.title %>" class="rounded me-3" style="width: 60px; height: 80px; object-fit: cover;">
                    <% } else { %>
                      <img src="/images/default-book.jpg" alt="Default Book" class="rounded me-3" style="width: 60px; height: 80px; object-fit: cover;">
                    <% } %>
                    <div>
                      <h6 class="mb-0"><%= book.title %></h6>
                      <small class="text-muted"><%= book.category || 'General' %></small>
                    </div>
                  </div>
                </td>
                <td><%= book.author || 'Unknown' %></td>
                <td>$<%= book.price || 0 %></td>
                <td>
                  <form action="/cart/remove" method="POST" class="d-inline">
                    <input type="hidden" name="bookId" value="<%= book._id %>">
                    <button type="submit" class="btn btn-danger btn-sm">
                      <i class="fas fa-trash-alt"></i> Remove
                    </button>
                  </form>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>

      <div class="text-end mt-4">
        <a href="/checkout" class="btn btn-success px-4">
          <i class="fas fa-credit-card me-2"></i> Proceed to Checkout
        </a>
      </div>
    <% } %>
  </div>
</section>
